<%- include ("includes/header", { "title": "My Shared Links" }) %>

<div class="container mt-5 mb-5">
    <%- include ("includes/ResponseAlert", { "request": request }) %>

    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">My Shared Links</h1>
        </div>
    </div>

    <div class="row mt-4">
        <% links.forEach(function (link) {
            const singleFile = link.file;
        %>
            <div class="col-md-4">
                <div class="card mb-4 shadow" style="cursor: pointer;">
                    <div class="card-body text-center">
                        <i class="fa fa-file-text-o fa-5x text-primary"></i>

                        <form method="POST" action="<%= request.mainURL %>/DeleteLink"
                            onsubmit="return confirm('Are you sure you want to delete this link?');">
                            <input type="hidden" name="_id" value="<%= link._id %>" required />
                            <button type="submit" class="btn btn-danger mt-3">Delete</button>
                        </form>
                    </div>

                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="text-center"><%= singleFile.name %></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ("includes/footer") %>
